@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Database Explainer</PageTitle>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ToggleNavDrawer())" />
        Database Explainer
        <SettingsMenu />
    </MudAppBar>
    <MudDrawer @bind-Open="@_navDrawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <article class="content px-4">
            @Body
        </article>
    </MudMainContent>
</MudLayout>

@code {
    bool _navDrawerOpen = true;

    void ToggleNavDrawer()
    {
        _navDrawerOpen = !_navDrawerOpen;
    }
}