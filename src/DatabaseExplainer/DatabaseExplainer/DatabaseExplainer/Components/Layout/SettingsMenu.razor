@inject NavigationManager Navigation
@rendermode InteractiveAuto

<MudSpacer />

<MudToolBar>
    Settings
    <MudSpacer />

    <MudIconButton Variant="Variant.Filled" Color="Color.Primary" Icon="@Icons.Material.Outlined.Settings" OnClick="@((e) => OpenSettingsDrawer())" />
</MudToolBar>

<MudDrawer @bind-Open="@_settingsDrawerOpen" Anchor="Anchor.End" Elevation="1" Variant="@DrawerVariant.Temporary">
    <MudDrawerHeader>
        <MudIcon Icon="@Icons.Material.Outlined.Settings" />
        <MudText Typo="Typo.h6" Class="px-4">Settings</MudText>
    </MudDrawerHeader>
    <MudDrawerContainer>
        <MudNavMenu>
             Configure...
        </MudNavMenu>
    </MudDrawerContainer>
</MudDrawer>

@code {
    bool _settingsDrawerOpen = false;

    /// <summary>
    /// Open/Closes the settings drawer
    /// </summary>
    void OpenSettingsDrawer()
    {
        _settingsDrawerOpen = !_settingsDrawerOpen;
    }
}